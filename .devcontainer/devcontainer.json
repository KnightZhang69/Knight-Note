{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18",
      "installYarn": true,
      "installPnpm": true
    }
  },
  "postCreateCommand": "curl https://cursor.com/install -fsS | bash && npm install -g @gemini-ai/cli && pnpm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-typescript-next",
        "GitHub.copilot"
      ]
    }
  }
}
